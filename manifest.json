{
  "manifest_version": 2,
  "name": "Show hatenabookmark count",
  "version": "1.0.1",
  "description": "Show hatenabookmark count on current tab.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/hatenabookmark-logomark-48.png",
      "96": "icons/hatenabookmark-logomark-96.png"
    },
    "default_title": "Open hatebu page"
  },
  "permissions": [
    "http://api.b.st-hatena.com/",
    "tabs"
  ]
}